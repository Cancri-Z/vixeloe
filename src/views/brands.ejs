                                    <div><input type="radio" name="min" value="40" id="40"><label for="40">₦ 50,000</label></div>
                                    <div><input type="radio" name="min" value="50" id="50"><label for="50">₦ 70,000</label></div>
                                    <div><input type="radio" name="min" value="60" id="60"><label for="60">₦ 100,000</label></div>
                                </div>
                                <div class="max">
                                    <div class="thick">Maximum Price</div>
                                    <div><input type="radio" name="max" value="10.2" id="10.2"><label for="10.2">₦ 30,000</label></div>
                                    <div><input type="radio" name="max" value="20.2" id="20.2"><label for="20.2">₦ 50,000</label></div>
                                    <div><input type="radio" name="max" value="30.2" id="30.2"><label for="30.2">₦ 100,000</label></div>
