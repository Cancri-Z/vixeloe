                                    </div>
                                    <div class="ram-x rife"><input type="radio" name="col" value="5" id="col-5">
                                        <label for="col-5">Purple<div class="indicator" style="background-color: purple;"></div></label>
                                    </div>
                                </div>
                        </div>


                    <div id="condition">    
                        <div class="ramV">
                            <div class="heading">Condition</div>
                                <div id="ram-1" class="condt">
                                    <div class="ram-x">
                                        <input type="radio" name="condition" id="new"><label for="new">New</label>
                                    </div>
                                    <div class="ram-x">
                                        <input type="radio" name="condition" id="refurbished"><label for="refurbished">Refurbished</label>
                                    </div>
                                    <div class="ram-x">
                                        <input type="radio" name="condition" id="used"><label for="used">Used</label>
                                    </div>
                                </div>
                        </div>
                    </div>
                       
                    
                    <div id="TypeC">
                        <div class="heading">Used-Type</div>
                            <div id="conXX">
                                <div class="ram-x">
                                    <input type="radio" name="used" id="UK"><label for="UK">UK Used</label>
                                </div>
                                <div class="ram-x">
                                    <input type="radio" name="used" id="NG"><label for="NG">Nigerian Used</label>
                                </div>
                            </div>
                    </div>
                </div>
                
               </div>
            </div>
            
                <div id="products-top">

                    <h1 class="prd-name">Products by <%= brandName %></h1>
                        <div id="banner-container">
                            <div id="banner">
                                <img src="/img/samsung-banner.webp" alt="" class="banner-img active" >
                                <img src="/img/banner.webp" alt="" class="banner-img">
                                <img src="/img/banne2.webp" alt="" class="banner-img">
                               
                                <div id="indicatorsX">
                                     <div id="dot-indicators"></div>
                                </div>

                                <div id="banner-controls">
                                    <button id="prev-btn">&#10094;</button>
                                    <button id="next-btn">&#10095;</button>
                                </div>
                            </div>
                
                        </div>
                


                        <div id="product-section">
                           
                            <div class="products-container">
                                <% products.forEach(product => { %>
                                <a href="/product/<%= product._id %>" class="deal">
                                    <img src="<%= product.image %>" alt="<%= product.product_name %>">
                                    <div class="details">
                                        <p class="name"><%= product.product_name %></p>
                                        <p class="condition"><%= product.condition %></p>
                                        <p class="price">&#8358;<%= product.price %></p>
                                        <p class="rating">&#9733;&#9733;&#9733;&#9733;&#9733;</p>
                                        <p class="location"><i class="fa-solid fa-location-dot"></i> <%= product.location %></p>
                                    </div>
                                </a>
                                <% }); %>
                            </div>
                        </div>
                        
                </div>
