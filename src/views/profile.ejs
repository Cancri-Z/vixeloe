  <div class="container">
    <h1>User Profile</h1>
    <div class="profile-card">
      <img id="profilePicture" src="/img/placeholderpic.jpg" alt="Profile Picture">
      <div class="profile-info">
        <h2 id="fullName"></h2>
        <p><span class="label">Gender:</span> <span id="userGender"></span></p>
        <p><span class="label">Date of Birth:</span> <span id="userDOB"></span></p>
        <p><span class="label">Marital Status:</span> <span id="userMaritalStatus"></span></p>
        <p><span class="label">Occupation:</span> <span id="userOccupation"></span></p>
        <p><span class="label">Status:</span> <span id="userStatus"></span></p>
        <p><span class="label">Bio:</span> <span id="userBio"></span></p>
        <p><span class="label">Email:</span> <span id="userEmail"></span></p>
        <p><span class="label">Home Address:</span> <span id="homeAddress"></span></p>
        <p><span class="label">Office Address:</span> <span id="officeAddress"></span></p>
        <p><span class="label">Home Phone:</span> <span id="homePhone"></span></p>
        <p><span class="label">Mobile Phone:</span> <span id="mobilePhone"></span></p>
        <p><span class="label">Office Phone:</span> <span id="officePhone"></span></p>
        <button id="editButton">
            Edit Profile
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#000"><path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/></svg>
        </button>
      </div>
    </div>
    <div id="editForm" class="edit-form hidden">
      <h3>Edit Profile</h3>
      <div id="cameraFeed">
        <button id="captureButton">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="orange"><path d="M440-440ZM120-120q-33 0-56.5-23.5T40-200v-480q0-33 23.5-56.5T120-760h126l74-80h240v80H355l-73 80H120v480h640v-360h80v360q0 33-23.5 56.5T760-120H120Zm640-560v-80h-80v-80h80v-80h80v80h80v80h-80v80h-80ZM440-260q75 0 127.5-52.5T620-440q0-75-52.5-127.5T440-620q-75 0-127.5 52.5T260-440q0 75 52.5 127.5T440-260Zm0-80q-42 0-71-29t-29-71q0-42 29-71t71-29q42 0 71 29t29 71q0 42-29 71t-71 29Z"/></svg>
          <div>Take a picture</div>
        </button>
        <video id="videoElement"></video>
      </div>
      <input type="file" id="profilePictureInput" accept="image/*">
      <input type="text" id="firstNameInput" placeholder="First Name">
      <input type="text" id="middleNameInput" placeholder="Middle Name">
      <input type="text" id="lastNameInput" placeholder="Last Name">
      <select id="userGenderInput">
        <option value="">Select Gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
      <input type="date" id="userDOBInput" placeholder="Date of Birth">
      <select id="userMaritalStatusInput">
        <option value="">Select Marital Status</option>
        <option value="single">Single</option>
        <option value="married">Married</option>
        <option value="divorced">Divorced</option>
        <option value="widowed">Widowed</option>
      </select>
      <input type="text" id="userOccupationInput" placeholder="Occupation">
      <select id="userStatusInput">
        <option value="">Select Status</option>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
        <option value="suspended">Suspended</option>
      </select>
      <textarea id="userBioInput" placeholder="Bio"></textarea>
      <input type="email" id="userEmailInput" placeholder="Email">
      <input type="text" id="homeAddressInput" placeholder="Home Address">
      <input type="text" id="officeAddressInput" placeholder="Office Address">
      <input type="tel" id="homePhoneInput" placeholder="Home Phone">
      <input type="tel" id="mobilePhoneInput" placeholder="Mobile Phone">
      <input type="tel" id="officePhoneInput" placeholder="Office Phone">
      <button id="saveButton">Save Changes</button>
      <button id="cancelButton">Cancel</button>
    </div>
